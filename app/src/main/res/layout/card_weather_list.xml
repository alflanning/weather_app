<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/element_margin_double"
        android:background="@color/colorWhite"
        card_view:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_temp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_normal"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="@dimen/element_margin"
                    android:layout_marginStart="@dimen/element_margin_triple"
                    android:layout_marginEnd="@dimen/element_margin_triple" />

                <TextView
                    android:id="@+id/item_pressure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_normal"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="@dimen/element_margin"
                    android:layout_marginStart="@dimen/element_margin_triple"
                    android:layout_marginEnd="@dimen/element_margin_triple"
                    />

                <TextView
                    android:id="@+id/item_humidity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_normal"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="@dimen/element_margin"
                    android:layout_marginStart="@dimen/element_margin_triple"
                    android:layout_marginEnd="@dimen/element_margin_triple"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_small"
                    android:textColor="@color/colorGray"
                    android:layout_marginTop="@dimen/element_margin"
                    android:layout_marginBottom="@dimen/element_margin_triple"
                    android:layout_marginLeft="@dimen/element_margin_triple"
                    android:layout_marginStart="@dimen/element_margin_triple"
                    />


            </LinearLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>

</RelativeLayout>